.item-container {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 150rpx;
  background: white;
}

.avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 45rpx;
  margin-top: 30rpx;
  margin-left: 32rpx;
}

.item-info {
  display: flex;
  flex-direction: column;
  text-align: center;
  justify-content: center;
  margin-left: 16rpx;
}

.item-info-line1 {
  display: flex;
  flex-direction: row;
}

.item-name {
  font-size: 32rpx;
  color: #333;
}

.item-title {
  margin-left: 8rpx;
  font-size: 24rpx;
  margin-top: 8rpx;
  color: #333;
}

.item-info-line2 {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}

.item-line2-text {
  font-size: 24rpx;
  color: #999;
}

.item-divider {
  height: 14rpx;
  width: 2rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  margin-top: 12rpx;
  position: relative;
  background: #999;
}

.item-phone {
  position: absolute;
  right: 32rpx;
  width: 50rpx;
  height: 50rpx;
  margin-top: 50rpx;
}
