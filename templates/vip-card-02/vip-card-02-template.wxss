.vip-02-container {
  width: 100%;
  height: 100%;
  border-radius: 40rpx;
  box-shadow: 0rpx 16rpx 30rpx rgba(155, 155, 155, 0.46);
  background: #888;
  /* background-image: "/images/vip-card/01/bg.png" */
}

.vip-02-top-info-container {
  display: flex;
  flex-direction: column;
  padding-top: 56rpx;
  text-align: center;
  justify-content: center;
}

.vip-02-row-container {
  display: flex;
  flex-direction: row;
  text-align: center;
  justify-content: center;
  margin-top: 8rpx;
}

.vip-02-qr {
  width: 100%;
  height: 94rpx;
  margin-top: 16rpx;
}

.vip-02-name {
  font-size: 38rpx;
  color: #333;
  /* margin-left: -2rpx; */
}

.vip-02-top-light-text {
  font-size: 22rpx;
  color: #333;
}

.vip-02-clickable-text {
  font-size: 26rpx;
  color: #FFF09E;
}

.vip-02-divider {
  width: 2rpx;
  height: 16rpx;
  margin-left: 16rpx;
  margin-right: 16rpx;
  margin-top: 8rpx;
  position: relative;
  background: #333;
}

.vip-02-bottom-info-container {
  display: flex;
  flex-direction: column;
  margin-top: 140rpx;
}

.vip-02-bottom-line-container {
  margin-top: -2rpx;
}

.vip-02-bottom-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 40rpx;
  margin-right: 30rpx;
  vertical-align: middle;
}

.vip-02-bottom-text {
  font-size: 26rpx;
  color: #fff;
}

.vip-02-bottom-company {
  width: 100%;
  font-size: 22rpx;
  position: absolute;
  color: white;
  bottom: 30rpx;
  text-align: center;
}
